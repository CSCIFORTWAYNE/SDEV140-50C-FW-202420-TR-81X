{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {}
},
	"forwardPorts": [6080],
  "portsAttributes": {
    "6080": {
      "label": "desktop"
    }
  },
	"customizations": {
		
		"vscode": {
			"settings": {
				"workbench.colorTheme": "Default Dark+" 
			},
			
			"extensions": [
				"ms-python.python",
				"donjayamanne.python-environment-manager",
				"ms-python.pylint"
			]
		}
	}
}